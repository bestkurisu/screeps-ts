{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es2018"
    ],
    "target": "es2018",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "noImplicitThis": false,
    "types": ["node", "chai", "mocha", "screeps", "lodash", "vitest/globals"],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@test/*": [
        "./test/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/",
    "./test/"
  ]
}
